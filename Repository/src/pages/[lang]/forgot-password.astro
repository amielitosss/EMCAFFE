---
import Footer from '@/components/Footer.astro';
import Header from '@/components/Header.astro';
import Layout from '@/layouts/Layout.astro';
import { getLangFromUrl, getStaticPaths, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export { getStaticPaths };
---

<Layout title={t('forgot.title') || 'Mot de passe oublié'}>
    <Header />

    <div class="min-h-screen flex items-center justify-center px-4 py-12" style="margin-top: 100px;">
        <div class="max-w-md w-full">
            <a
                href={`/${lang}/log`}
                class="inline-flex items-center gap-2 text-[#5C3F32] hover:text-[#8B4513] mb-8 transition-colors"
            >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                {t('forgot.back') || 'Retour'}
            </a>

            <div class="bg-white rounded-2xl shadow-2xl p-8 md:p-10">
                <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[#5C3F32] to-[#8B4513] rounded-full flex items-center justify-center">
                    <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </div>

                <h1 class="text-3xl font-bold text-center text-[#5C3F32] mb-3">
                    {t('forgot.title') || 'Mot de passe oublié ?'}
                </h1>

                <p class="text-center text-gray-600 mb-8">
                    {t('forgot.description') || 'Entrez votre email pour recevoir un code de réinitialisation.'}
                </p>

                <div id="success-message" class="hidden mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                    <p class="text-sm text-green-700">
                        ✅ {t('forgot.successMessage') || 'Code envoyé ! Vérifiez votre email.'}
                    </p>
                </div>

                <div id="error-message" class="hidden mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                    <p class="text-sm text-red-700" id="error-text"></p>
                </div>

                <form id="forgot-form" class="space-y-6">
                    <div>
                        <label for="email" class="block text-sm font-medium text-[#5C3F32] mb-2">
                            {t('forgot.emailLabel') || 'Adresse email'}
                        </label>
                        <input
                            type="email"
                            id="email"
                            required
                            placeholder="votre@email.com"
                            class="w-full rounded-lg border-2 border-gray-300 px-4 py-3 transition duration-300 focus:border-[#5C3F32] focus:outline-none"
                        />
                    </div>

                    <button
                        type="submit"
                        id="submit-btn"
                        class="w-full bg-gradient-to-r from-[#5C3F32] to-[#8B4513] text-white font-bold py-3 px-6 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-[1.02] transition-all duration-300"
                    >
                        {t('forgot.submit') || 'Envoyer le code'}
                    </button>
                </form>
            </div>
        </div>
    </div>

    <Footer />
</Layout>

<script>
    import { userService } from '@/lib/api/userService';

    const form = document.getElementById('forgot-form') as HTMLFormElement;
    const emailInput = document.getElementById('email') as HTMLInputElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const successMessage = document.getElementById('success-message');
    const errorMessage = document.getElementById('error-message');
    const errorText = document.getElementById('error-text');

    form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const email = emailInput.value.trim();

        try {
            submitBtn.disabled = true;
            submitBtn.textContent = 'Envoi...';
            errorMessage?.classList.add('hidden');

            await userService.requestPasswordReset(email);

            successMessage?.classList.remove('hidden');
            form.reset();

            setTimeout(() => {
                const lang = document.documentElement.lang || 'fr';
                window.location.href = `/${lang}/reset-password`;
            }, 3000);
        } catch (error: any) {
            errorMessage?.classList.remove('hidden');
            if (errorText) {
                errorText.textContent = error.message || 'Erreur lors de l\'envoi du code.';
            }
            submitBtn.disabled = false;
            submitBtn.textContent = 'Envoyer le code';
        }
    });
</script>
